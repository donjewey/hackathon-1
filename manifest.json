{
    "manifest_version": 2,
    "name": "ShopList",
    "version": "1.0",
    "description": "a centralized wish list",
    "content_scripts": [
        {
          "matches": ["https://www.google.com/*"],
          "js": ["./main.js"]
        }
      ],
   "background": {
    "scripts": [
        "background.js"
    ],
    "persistent": false
     },
    "browser_action": {
        "popup": "index.html"
    },
    "permissions": [
        "storage"
    ]
  }
