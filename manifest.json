{
    "manifest_version": 3,
    "name": "ShopList",
    "version": "1.0",
    "description": "a centralized wish list",
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/*"
            ],
            "js": [
                "./main.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "action": {
            "default_popup": "index.html"
        },
        "permissions": [
            "storage"
        ]
    }
}